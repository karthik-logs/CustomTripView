<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_emp_pic"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_emp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_emp_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_emp_pic"
            android:text="ID10001010"/>

        <ImageView
            android:id="@+id/img_emp_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ico_launcher"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>