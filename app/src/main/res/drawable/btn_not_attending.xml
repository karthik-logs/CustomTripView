<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom Shadow -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
            <stroke
                android:width="3dp"
                android:color="#35D2B3"/>
        </shape>
    </item>

    <!-- White Top color -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
            <stroke
                android:width="3dp"
                android:color="#F00000"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_not_attending_normal"/>
</layer-list>